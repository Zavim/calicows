function _init()
 width=136
 height=136
 x,y=1,2
 make_flock(15)
 make_follow()
end

function _update60()
 update_follow()
 foreach(flock,update_boid)
end

function _draw()
 cls()
 camera(4,4)
 foreach(flock,draw_boid)
 if (btn(🅾️)) draw_follow()
 if (btn(❎)) print(stat(1),4,4,7)
end
